<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp"
    android:background="#93B5C6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="800dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_fotoMhs"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="120dp"
            app:cardCornerRadius="50dp"
            app:cardElevation="8dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/foto_mhs"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtNama"
            android:layout_width="268dp"
            android:layout_height="27dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="10dp"
            android:text="Nama Lengkap"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/cv_fotoMhs" />

        <EditText
            android:id="@+id/edTextNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNama"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNama" />

        <TextView
            android:id="@+id/txtNim"
            android:layout_width="268dp"
            android:layout_height="27dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="5dp"
            android:text="Nim"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/edTextNama"/>

        <EditText
            android:id="@+id/edTextNim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNim"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNim" />

        <TextView
            android:id="@+id/txtDesc"
            android:layout_width="268dp"
            android:layout_height="27dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="5dp"
            android:text="Deskripsi Diri"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/edTextNim"/>

        <EditText
            android:id="@+id/edTextDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDesc"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNim" />

        <TextView
            android:id="@+id/txtAlamat"
            android:layout_width="274dp"
            android:layout_height="30dp"
            android:layout_below="@+id/edTextDesc"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:text="Alamat"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/ll_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_below="@+id/txtAlamat">

            <EditText
                android:id="@+id/etLoc"
                android:layout_width="296dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:hint="Masukkan Lokasi" />

            <Button
                android:id="@+id/btnOpenLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Open Location"
                android:textStyle="bold"
                android:textSize="12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtPhone"
            android:layout_width="274dp"
            android:layout_height="30dp"
            android:layout_below="@+id/ll_alamat"
            android:layout_marginStart="4dp"
            android:layout_marginTop="5dp"
            android:text="Phone"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_below="@+id/txtPhone">

            <EditText
                android:id="@+id/etPhone"
                android:layout_width="409dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:hint="Masukkan Nomor Telepon" />

            <Button
                android:id="@+id/btnPhone"
                android:layout_width="213dp"
                android:layout_height="51dp"
                android:layout_weight="2"
                android:text="Telephone number"
                android:textStyle="bold"
                android:textSize="12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtEmail"
            android:layout_width="248dp"
            android:layout_height="27dp"
            android:layout_marginStart="4dp"
            android:layout_below="@+id/ll_phone"
            android:layout_marginTop="5dp"
            android:text="Email"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/ll_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_below="@+id/txtEmail">

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="409dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:hint="Masukkan Alamat Email" />

            <Button
                android:id="@+id/btnEmail"
                android:layout_width="213dp"
                android:layout_height="51dp"
                android:layout_weight="2"
                android:text="Send Email"
                android:textStyle="bold"
                android:textSize="12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtHobi"
            android:layout_width="248dp"
            android:layout_height="27dp"
            android:layout_marginStart="4dp"
            android:layout_below="@+id/ll_email"
            android:layout_marginTop="5dp"
            android:text="Hobby"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/LLHobi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtHobi"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtHobi">

            <CheckBox
                android:id="@+id/cbGaming"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Gaming" />

            <CheckBox
                android:id="@+id/cbSwimming"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Basket" />

            <CheckBox
                android:id="@+id/cbCoding"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:text="Coding" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/LLHobi"
            android:layout_marginTop="10dp"
            android:onClick="simpan"
            android:text="SIMPAN"
            android:textSize="18dp" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/LLHobi"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/btnSimpan"
            android:onClick="cancel"
            android:text="CANCEL"
            android:textSize="18dp" />
    </RelativeLayout>
</ScrollView>